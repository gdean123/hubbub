<!-- Todo App Interface -->

<div id="hubbub_app">

  <div class="title">
    <h1>Items</h1>
  </div>

  <div class="content">
    <div>
        <button id="add_item_btn">Add New Item</button>
    </div>
    <div id="items">
        <ul id="item-list"></ul>
    </div>
  </div>

</div>

