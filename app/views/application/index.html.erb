    <h1>Items</h1>
  </div>

  <div class="content">
    <div>
        <button id="add_item_btn">Add New Item</button>
    </div>
    <div id="items">
        <ul id="item-list"></ul>
    </div>
  </div>

</div>

<!-- Partials -->

<%= render 'templates/dialog-template' %>
<%= render 'templates/item-template' %>

<!-- document.ready -->

